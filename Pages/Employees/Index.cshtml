@page
@model WebApplication1.Pages.Client.IndexModel
@{
}

<br>
<h2>List of Employees</h2>
<a class="btn btn-primary btn-sm" href='/Employees/Create'>New Employee</a>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Created At</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model.listEmployees)
		{
			<tr>
				<td>@item.id</td>
				<td>@item.firstName</td>
				<td>@item.lastName</td>
				<td>@item.email</td>
				<td>@item.phone</td>
				<td>@item.created_at</td>
				<td>
					<a class="btn btn-primary btn-sm" href="/Employees/Edit?id=@item.id">Edit Employee</a>
					<a class="btn btn-primary btn-sm" href="/Employees/Delete?id=@item.id">Delete Employee</a>
				</td>
			</tr>
		}
	</tbody>
</table>
