@page
@model WebApplication1.Pages.Employees.EditModel
@{
}

<br>
<h2>Edit Employee</h2>

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-warning fade show" role="alert">
        <strong>@Model.errorMessage</strong>
    </div>
}


<form method="POST">
    <input type="hidden" name="id" value="@Model.employeeInfo.id" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" name="firstName" id="firstName" placeholder="Enter your first name" value="@Model.employeeInfo.firstName">
        </div>
        <div class="form-group col-md-6">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Enter your last name" value="@Model.employeeInfo.lastName">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="phone">Phone</label>
            <input type="tel" class="form-control" name="phone" id="phone" placeholder="Enter your phone number" value="@Model.employeeInfo.phone">
        </div>
        <div class="form-group col-md-6">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" value="@Model.employeeInfo.email">
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                </div>
            </div>
        </div>
    }
</form>